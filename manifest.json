{
    "manifest_version": 3,
    "version": "0.1",
    "short_name": "Lady",
    "name": "FladyCard",
    "description": "Selecciona texto en ingles, tradúcelo al español y aprende de una vez esas palabras difíciles agregandolas a tu diccionario.",
    "homepage_url": "https://www.FladyCard.net/",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "24": "icon_24.png",
        "48": "icon_48.png",
        "96": "icon_96.png",
        "128": "icon_128.png"
    },
    "permissions": [
        "unlimited_storage",
        "notifications",
        "contextMenus",
        "container.html",
        "http://localhost:31224/"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "img/verymatch-icon.png",
                "img/cerrar.png",
                "bubble/very.js",
                "container.html"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js",
                "bubble/very.js"
            ],
            "css": [
                "bubble/estilo.css"
            ],
            "all_frames": true
        }
    ],
    "sandbox": {
        "pages": [
            "verypop.html"
        ]
    }
}